/* components/repairBox/repairBox.wxss */
.repairInfoBox {
  widows: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  padding: 15rpx 30rpx 15rpx 15rpx;
}

.title {
  height: 75rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 0 15rpx;
}
.titleName {
  display: flex;
  justify-content: center;
  align-items: center;
}
.titleName image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
} 
.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 10rpx;
  padding-left: 15rpx;
}
.info view {
  font-size: 34rpx;
  padding: 10rpx 0;
}
.info .infoName {
  color: #979797;
}
.more {
  vertical-align: 7%;
}