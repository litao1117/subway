/* components/steps/steps.wxss */
.steps {
  /* height: 300rpx; */
  display: flex;
}
.left {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.left .icon {
  width: 60rpx;
  height: 30rpx;
}
.left .icon image {
  display: block;
  margin: 0 auto;
  width: 30rpx;
  height: 30rpx;
}
.left .border {
  width: 5rpx;
  height: 100%;
  background-color: #1296db;
}
.right {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
  min-height: 200rpx;
  padding: 0 15rpx;
  background-color: #F6F6F6;
}
.right .title {
  font-size: 40rpx;
}
.right .des {
  font-size: 35rpx;
  color: #888888;
}
.right .name-time {
  font-size: 30rpx;
  color: #999999;
}
.right .name-time text {
  margin-left: 20rpx;
}
.right .time {
  color: #1296db;
  font-size: 30rpx;
}
