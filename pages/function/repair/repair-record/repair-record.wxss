/* pages/function/repair/repair-record.wxss */
.page-content {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.list {
  flex: 1;
  background-color: #f2f2f2;
  padding: 20rpx;
}
.list .count {
  display: flex;
  justify-content: space-between;
  color: #979797;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding-left: 15rpx;
  border-bottom: 1rpx solid #dcdcdc;
}
.checkTime {
  z-index: 10;
}
.checkTime:hover .unfold {
  color: #00bfff;
}
.repairInfoBox {
  widows: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 15rpx;
  z-index: 1;
}

.leftAvatar {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #dadada;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 35rpx;
  color: #00bfff;
}
.rightBox {
  margin-left: 20rpx;
  z-index: 1;
}
.rightBox>view{
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #888888;
  width: 540rpx;
}
.firstBox {
  
  display: flex;
  align-items: center;
}
.repairNum {
  display: block;
  font-size: 30rpx;
  color: #00bfff;
  letter-spacing: 3rpx;
  width: 140rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.rightBox .desc {
  display: block;
  width: 340rpx;
  font-size: 35rpx;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.lastView {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.red {
  color: red;
}
.blue {
  color: #00bfff;
}
.green {
  color: #00ff15;
}

.more {
  vertical-align: 10%;
}
.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 10rpx;
  padding-left: 15rpx;
}
.info view {
  font-size: 34rpx;
  padding: 10rpx 0;
}
.info .infoName {
  color: #979797;
}
.loading {
  /* height: 100rpx; */
  background-color: #f2f2f2;
}

.no {
  text-align: center;
}
