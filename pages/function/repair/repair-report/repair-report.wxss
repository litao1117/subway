/* pages/function/repair/repair-report/repair-report.wxss */

.page-body {
  background-color: #f2f2f2;
  min-height: 100vh;
}

.info-box {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-bottom: 2rpx solid #f1f1f1;
}
.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.left image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.left .name {
  color: #999999;
  font-size: 32rpx;
}
.middle {
  display: flex;
  flex-direction: column;
  height: 160rpx;
  width: 400rpx;
  justify-content: space-between;
}
.middle .des {
  font-size: 35rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.middle .locate,
.middle .time {
  font-size: 32rpx;
  color: #999999;
}
.middle .icon {
  vertical-align: 10%;
  margin-right: 10rpx;
}
.right .button{
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #1296db;
  color: #1296db;
  font-size: 30rpx;
  border-radius: 50rpx;
}