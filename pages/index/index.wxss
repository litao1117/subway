page{
  background-color: #F6F6F6;
}
.page-body {
  flex: 1;
  padding: 0 20rpx;
}
swiper {
  width: 100%;
  height: 350rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 10rpx; 
}
swiper .wx-swiper-dot{
    width:12rpx;
    display: inline-flex;
    height: 12rpx;
    justify-content:space-between;
}

 swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;
    background:white;
    border-radius: 10rpx;
    opacity: 0.4;
    
} 
 swiper .wx-swiper-dot-active::after{
    content: '';
    flex-grow: 50;
    border-radius: 10rpx;
    background:white;  
} 
swiper swiper-item {
  height: 350rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
swiper-item image {
  width: 100%;
  height: 350rpx;
}
